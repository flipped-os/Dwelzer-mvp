// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      Role     @default(FREE)
  verified  Boolean  @default(false) // KYC
  listings  Listing[]
  createdAt DateTime @default(now())
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  price       Float
  category    Category
  createdBy   User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
}

enum Role {
  FREE
  PRO
}

enum Category {
  HOTELS
  SHORTLETS
  REAL_ESTATE
  MARKETPLACE
  LEGAL
}
